# Nginx Configuration for FindBrexitConsultants.co.uk
# Alternative to Apache .htaccess for Nginx servers

# This configuration should be added to your Nginx server block
# Typically in /etc/nginx/sites-available/findbrexitconsultants.co.uk

server {
    listen 80;
    server_name findbrexitconsultants.co.uk www.findbrexitconsultants.co.uk;
    
    # Redirect HTTP to HTTPS
    return 301 https://$server_name$request_uri;
}

server {
    listen 443 ssl http2;
    server_name findbrexitconsultants.co.uk www.findbrexitconsultants.co.uk;
    
    # SSL Configuration (adjust paths as needed)
    ssl_certificate /path/to/ssl/certificate.crt;
    ssl_certificate_key /path/to/ssl/private.key;
    
    # SSL Settings
    ssl_protocols TLSv1.2 TLSv1.3;
    ssl_ciphers ECDHE-RSA-AES128-GCM-SHA256:ECDHE-RSA-AES256-GCM-SHA384:ECDHE-RSA-AES128-SHA256:ECDHE-RSA-AES256-SHA384;
    ssl_prefer_server_ciphers on;
    ssl_session_cache shared:SSL:10m;
    ssl_session_timeout 10m;
    
    # Document root
    root /var/www/findbrexitconsultants.co.uk/html;
    index index.html;
    
    # Security Headers
    add_header X-Frame-Options DENY always;
    add_header X-Content-Type-Options nosniff always;
    add_header X-XSS-Protection "1; mode=block" always;
    add_header Strict-Transport-Security "max-age=31536000; includeSubDomains; preload" always;
    add_header Referrer-Policy "strict-origin-when-cross-origin" always;
    
    # Remove server tokens
    server_tokens off;
    
    # Gzip compression
    gzip on;
    gzip_vary on;
    gzip_min_length 1024;
    gzip_types
        text/plain
        text/css
        text/xml
        text/javascript
        application/javascript
        application/xml+rss
        application/json
        application/xml
        image/svg+xml;
    
    # Cache static assets
    location ~* \.(js|css|png|jpg|jpeg|gif|ico|svg|woff|woff2|ttf|eot)$ {
        expires 1M;
        add_header Cache-Control "public, immutable";
        access_log off;
    }
    
    # Handle React Router (SPA) - catch all routes
    location / {
        try_files $uri $uri/ /index.html;
    }
    
    # Deny access to sensitive files
    location ~ /\.(env|git|svn) {
        deny all;
        return 404;
    }
    
    location ~ \.log$ {
        deny all;
        return 404;
    }
    
    # Handle API routes (if any local APIs)
    location /api/ {
        # Proxy to your API server if needed
        # proxy_pass http://localhost:3001;
        # proxy_set_header Host $host;
        # proxy_set_header X-Real-IP $remote_addr;
    }
    
    # Error pages
    error_page 404 /index.html;
    error_page 500 502 503 504 /index.html;
    
    # Logging
    access_log /var/log/nginx/findbrexitconsultants.access.log;
    error_log /var/log/nginx/findbrexitconsultants.error.log;
}

# Rate limiting (optional)
http {
    limit_req_zone $binary_remote_addr zone=api:10m rate=10r/s;
    
    server {
        # ... other configuration ...
        
        # Apply rate limiting to API routes
        location /api/ {
            limit_req zone=api burst=20 nodelay;
            # ... other location settings ...
        }
    }
}